{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dominicode/api-app-module": ["apps/api/src/app/app.module.ts"],
      "@dominicode/api/data-access-auth": ["libs/api/data-access-auth/src/index.ts"],
      "@dominicode/api/data-access-core": ["libs/api/data-access-core/src/index.ts"],
      "@dominicode/api/feature-auth": ["libs/api/feature-auth/src/index.ts"],
      "@dominicode/api/feature-core": ["libs/api/feature-core/src/index.ts"],
      "@dominicode/web/assets": ["libs/web/assets/src/index.ts"],
      "@dominicode/web/data-access-auth": ["libs/web/data-access-auth/src/index.ts"],
      "@dominicode/web/data-access-core": ["libs/web/data-access-core/src/index.ts"],
      "@dominicode/web/feature-about": ["libs/web/feature-about/src/index.ts"],
      "@dominicode/web/feature-auth": ["libs/web/feature-auth/src/index.ts"],
      "@dominicode/web/feature-core": ["libs/web/feature-core/src/index.ts"],
      "@dominicode/web/feature-dashboard": ["libs/web/feature-dashboard/src/index.ts"],
      "@dominicode/web/feature-shell": ["libs/web/feature-shell/src/index.ts"],
      "@dominicode/web/layout": ["libs/web/layout/src/index.ts"],
      "@dominicode/web/style": ["libs/web/style/src/index.ts"],
      "@dominicode/web/ui-form": ["libs/web/ui-form/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
